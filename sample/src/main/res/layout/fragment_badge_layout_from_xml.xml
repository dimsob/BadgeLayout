<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <au.com.dardle.widget.BadgeLayout
        android:id="@+id/badge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:spacing="24dp">

        <au.com.dardle.widget.BadgeItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_badge_personal"
            android:text="Personal" />

        <au.com.dardle.widget.BadgeItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_badge_business"
            android:text="Business" />

    </au.com.dardle.widget.BadgeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <au.com.dardle.widget.BadgeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:spacing="16dp">

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="TOP CHARTS"
                android:textColor="@android:color/white" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="GAMES"
                android:textColor="@android:color/white" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="CATEGORIES"
                android:textColor="@android:color/white" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="EARLY ACCESS"
                android:textColor="@android:color/white" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="FAMILY"
                android:textColor="@android:color/white" />

            <au.com.dardle.widget.BadgeItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_app_label"
                android:text="EDITORS' CHOICE"
                android:textColor="@android:color/white" />

        </au.com.dardle.widget.BadgeLayout>
    </HorizontalScrollView>

</LinearLayout>